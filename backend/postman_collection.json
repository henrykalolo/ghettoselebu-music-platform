{
  "info": {
    "name": "Ghettoselebu Music API",
    "description": "API collection for testing the Ghettoselebu music streaming platform"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"testpass123\",\n  \"password_confirm\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register/",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register", ""]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login/",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Genres",
      "item": [
        {
          "name": "Get All Genres",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/genres/",
              "host": ["{{baseUrl}}"],
              "path": ["genres", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Artists",
      "item": [
        {
          "name": "Get All Artists",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/artists/",
              "host": ["{{baseUrl}}"],
              "path": ["artists", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Tracks",
      "item": [
        {
          "name": "Get All Tracks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tracks/",
              "host": ["{{baseUrl}}"],
              "path": ["tracks", ""]
            }
          }
        }
      ]
    }
  ]
}
